generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  NURSE
  DOCTOR
  ADMIN
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  role        Role
  type        String
  profile     Profile?
  permissions Permission[]
}

model Profile {
  id        String @id @default(cuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id])
  firstName String
  lastName  String
}

model Permission {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  actions  String[]
  resource String
}
